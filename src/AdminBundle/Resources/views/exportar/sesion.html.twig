{% extends 'admin_base.html.twig' %}

{% set __title = 'Exportacion a Excel de Inicio de Sesion' %}


{% block content %}


    <!-- Filters-->
    <div class="box box-success">

        <div class="box-header with-border">
            <h3 class="box-title">Filtros</h3>
        </div>
        <!-- /.box-header -->
        <div class="bs-example" style="margin: 10px 15px 10px;">
            <div class="row">
                <div class = "col-md-12">
                    {{ form_start(form, {'attr': {'class': 'form-admin'} }) }}

                    <div style="width: 100%; float: left;">

                        <div class="col-lg-5">

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="bootstrap-timepicker">
                                        <div class="form-group">
                                            <label>Hora Desde:</label>

                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-clock-o"></i>
                                                </div>
                                                {{ form_widget(form.horaDesde) }}
                                            </div>
                                            <!-- /.input group -->
                                        </div>
                                        <!-- /.form group -->
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="bootstrap-timepicker">
                                        <div class="form-group">
                                            <label>Hora Hasta:</label>

                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-clock-o"></i>
                                                </div>
                                                {{ form_widget(form.horaHasta) }}
                                            </div>
                                            <!-- /.input group -->
                                        </div>
                                        <!-- /.form group -->
                                    </div>
                                </div>

                            </div>

                            <div class="form-group">
                                <label>Usuarios</label>
                                {{ form_widget(form.usuarios) }}
                            </div>

                        </div>
                        <!-- /.col -->
                        <div class="col-md-1"></div>

                        <div class="col-lg-5">

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Fecha Desde:</label>

                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            {{ form_widget(form.fechaDesde) }}
                                        </div>
                                        <!-- /.input group -->
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Fecha Hasta:</label>

                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            {{ form_widget(form.fechaHasta) }}
                                        </div>
                                        <!-- /.input group -->
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Sede</label>
                                {{ form_widget(form.sede) }}
                            </div>

                        </div>
                        <!-- /.col -->
                    </div>

                    <div class="box-footer">
                        <button type="submit" class="btn btn-success pull-right">Filtrar</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.box-body -->

    </div>
    <!-- /.box -->


{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/vendor/AdminLTE/plugins/timepicker/bootstrap-timepicker.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendor/AdminLTE/plugins/datepicker/datepicker3.css') }}">
{% endblock %}

{% block footer_javascript %}
    {{ parent() }}
    <script src="{{ asset('assets/vendor/AdminLTE/plugins/datepicker/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('assets/vendor/AdminLTE/plugins/timepicker/bootstrap-timepicker.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/AdminLTE/plugins/datepicker/locales/bootstrap-datepicker.es.js') }}"></script>
    <script>
        $(function () {
            //Date picker
            $('.datepicker').datepicker({
                autoclose: true,
                format: 'dd/mm/yyyy',
                language: 'es',
                startDate: '-1y',
                startView: '0 days'
            });

            //Timepicker
            $(".timepicker").timepicker({
                showInputs: false
            });
        });
    </script>
{% endblock  %}
