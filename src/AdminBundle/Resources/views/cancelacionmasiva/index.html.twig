    {% extends 'admin_base.html.twig' %}

    {% set __title = 'Listado de Cancelacion Masivas' %}

    {% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-success">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Sede</th>
                            <th>Motivo</th>
                            <th>Fecha</th>
                            <th>Activo</th>
                            <!--<th>Acciones</th>-->
                        </tr>
                        </thead>
                        <tbody>
                        {% for cancelacionMasiva in cancelacionMasivas %}
                        <tr>
                                <td><a href="{{ path('cancelacionmasiva_show', { 'id': cancelacionMasiva.id }) }}">{{ cancelacionMasiva.id }}</a></td>
                                <td>{{ cancelacionMasiva.sede }}</td>
                                <td>{{ cancelacionMasiva.motivo }}</td>
                                <td>{% if cancelacionMasiva.fecha %}{{ cancelacionMasiva.fecha|date('d/m/Y') }}{% endif %}</td>
                                <td>{% if cancelacionMasiva.activo %}<span class="label label-success">Si</span{% else %}<span class="label label-danger">No</span>{% endif %}</td>
                                <!--<td>
                                    <a title="Editar"   class="btn btn-default btn-sm" href="{{ path('cancelacionmasiva_edit', { 'id': cancelacionMasiva.id }) }}"><i class="glyphicon glyphicon-pencil"></i></a>
                                    <a title="Eliminar" class="btn btn-danger  btn-sm delete-obj" data-id="{{ cancelacionMasiva.id }}" data-href="{{ path('cancelacionmasiva_delete', { 'id': cancelacionMasiva.id }) }}"> <i class="glyphicon glyphicon-remove-circle"></i></a>
                                </td> -->
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
            {{ knp_pagination_render(cancelacionMasivas) }}

        </div>
    </div>

    <div class="delete-obj-form hidden">
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>

    <a class="btn btn-success" href="{{ path('cancelacionmasiva_new') }}">Nuevo Cancelacion Masiva</a>

    {% endblock %}

