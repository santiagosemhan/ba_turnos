    {% extends 'admin_base.html.twig' %}

    {% set __title = 'Cancelacion Masiva' %}

    {% block content %}
    <div class="box box-success">
        <div class="box-body">
            <div class="row">
                <div class="col-md-9">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                    <td>{{ cancelacionMasiva.id }}</td>
                            </tr>
                            <tr>
                                <th>Sede</th>
                                <td>{{ cancelacionMasiva.sede }}</td>
                            </tr>
                            <tr>
                                <th>Motivo</th>
                                    <td>{{ cancelacionMasiva.motivo }}</td>
                            </tr>
                            <tr>
                                <th>Fecha</th>
                                    <td>{% if cancelacionMasiva.fecha %}{{ cancelacionMasiva.fecha|date('d-m-Y') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Activo</th>
                                    <td>{% if cancelacionMasiva.activo %}<span class="label label-success">Si</span{% else %}<span class="label label-danger">No</span>{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Fechacreacion</th>
                                    <td>{% if cancelacionMasiva.fechaCreacion %}{{ cancelacionMasiva.fechaCreacion|date('d-m-Y H:i:s') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Fechaactualizacion</th>
                                    <td>{% if cancelacionMasiva.fechaActualizacion %}{{ cancelacionMasiva.fechaActualizacion|date('d-m-Y H:i:s') }}{% endif %}</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="box-footer">
                        <!--<a class="btn btn-success" href="{{ path('cancelacionmasiva_edit', { 'id': cancelacionMasiva.id }) }}"> Editar</a>-->
                        <a class="btn btn-default" href="{{ path('cancelacionmasiva_index') }}"> Volver al Listado</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

    {% endblock %}
