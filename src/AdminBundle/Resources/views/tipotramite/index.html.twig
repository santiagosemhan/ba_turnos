    {% extends 'admin_base.html.twig' %}

    {% set __title = 'Listado de Tipo Tramites' %}

    {% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-success">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Descripcion</th>
                            <th>Sin Turno</th>
                            <th>Activo</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for tipoTramite in tipoTramites %}
                        <tr>
                            <td><a href="{{ path('tipotramite_show', { 'id': tipoTramite.id }) }}">{{ tipoTramite.id }}</a></td>
                            <td>{{ tipoTramite.descripcion }}</td>
                            <td>{% if tipoTramite.sinTurno %}<span class="label label-success">Si</span{% else %}<span class="label label-danger">No</span>{% endif %}</td>
                            <td>{% if tipoTramite.activo %}<span class="label label-success">Si</span{% else %}<span class="label label-danger">No</span>{% endif %}</td>
                            <td>
                                <a title="Editar"   class="btn btn-default btn-sm" href="{{ path('tipotramite_edit', { 'id': tipoTramite.id }) }}"><i class="glyphicon glyphicon-pencil"></i></a>
                                <a title="Eliminar" class="btn btn-danger  btn-sm delete-obj" data-id="{{ tipoTramite.id }}" data-href="{{ path('tipotramite_delete', { 'id': tipoTramite.id }) }}"> <i class="glyphicon glyphicon-remove-circle"></i></a>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
            {{ knp_pagination_render(tipoTramites) }}

        </div>
    </div>

    <div class="delete-obj-form hidden">
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>

    <a class="btn btn-success" href="{{ path('tipotramite_new') }}">Nuevo Tipo Tramite</a>

    {% endblock %}

