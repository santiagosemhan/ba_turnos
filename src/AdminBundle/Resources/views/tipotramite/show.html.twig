    {% extends 'admin_base.html.twig' %}

    {% set __title = 'Tipo Tramite' %}

    {% block content %}
    <div class="box box-success">
        <div class="box-body">
            <div class="row">
                <div class="col-md-9">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                    <td>{{ tipoTramite.id }}</td>
                            </tr>
                            <tr>
                                <th>Descripción</th>
                                    <td>{{ tipoTramite.descripcion }}</td>
                            </tr>
                            <tr>
                                <th>Texto</th>
                                    <td>{{ tipoTramite.texto|raw  }}</td>
                            </tr>
                            <tr>
                                <th>Sin Turno</th>
                                    <td>{% if tipoTramite.sinTurno %}<span class="label label-success">Si</span{% else %}<span class="label label-danger">No</span>{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Documento1</th>
                                    <td>{{ tipoTramite.documento1 }}</td>
                            </tr>
                            <tr>
                                <th>Documento2</th>
                                    <td>{{ tipoTramite.documento2 }}</td>
                            </tr>
                            <tr>
                                <th>Documento3</th>
                                    <td>{{ tipoTramite.documento3 }}</td>
                            </tr>
                            <tr>
                                <th>Documento4</th>
                                    <td>{{ tipoTramite.documento4 }}</td>
                            </tr>
                            <tr>
                                <th>Documento5</th>
                                    <td>{{ tipoTramite.documento5 }}</td>
                            </tr>
                            <tr>
                                <th>Documento6</th>
                                    <td>{{ tipoTramite.documento6 }}</td>
                            </tr>
                            <tr>
                                <th>Activo</th>
                                    <td>{% if tipoTramite.activo %}<span class="label label-success">Si</span{% else %}<span class="label label-danger">No</span>{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Fecha Creación</th>
                                    <td>{% if tipoTramite.fechaCreacion %}{{ tipoTramite.fechaCreacion|date('d-m-Y H:i:s') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Fecha Actualización</th>
                                    <td>{% if tipoTramite.fechaActualizacion %}{{ tipoTramite.fechaActualizacion|date('d-m-Y H:i:s') }}{% endif %}</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="box-footer">
                        <a class="btn btn-success" href="{{ path('tipotramite_edit', { 'id': tipoTramite.id }) }}"> Editar</a>
                        <a class="btn btn-default" href="{{ path('tipotramite_index') }}"> Volver al Listado</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

    {% endblock %}
