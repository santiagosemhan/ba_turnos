    {% extends 'admin_base.html.twig' %}


    {% set __title = 'Agregar Usuarios y Tipo de Tramte al Turno Sede' %}

    {% block content %}
    <div class="box box-success">
        <div class="box-body">
            <div class="row">
                <div class="col-md-9">
                    <!-- form start -->
                    {{ form_start(edit_form) }}
                    <div id="adminbundle_turnosede">
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="adminbundle_turnosede_lunes">Turno Sede: </label>
                            <div class="col-sm-10">
                                <div style="width: 100%; padding-top: 6px;">
                                    {{ textoSede }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.turnoTipoTramite) }}
                            <div class="col-sm-10">
                                {{ form_widget(edit_form.turnoTipoTramite) }}
                                {{ form_errors(edit_form.turnoTipoTramite) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.usuarioTurnoSede) }}
                            <div class="col-sm-10">
                                {{ form_widget(edit_form.usuarioTurnoSede) }}
                                {{ form_errors(edit_form.usuarioTurnoSede) }}
                            </div>
                        </div>

                    </div>
                    <div class="box-footer">
                        <input class="btn btn-success" type="submit" value="Editar"/>
                        <a class="btn btn-default" href="{{ path('turnosedeusuariotipotramite_index') }}"> Volver al Listado</a>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>

    {% endblock %}


    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('assets/vendor/AdminLTE/plugins/timepicker/bootstrap-timepicker.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/AdminLTE/plugins/datepicker/datepicker3.css') }}">
    {% endblock %}

    {% block footer_javascript %}
        {{ parent() }}
        <script src="{{ asset('assets/vendor/AdminLTE/plugins/datepicker/bootstrap-datepicker.js') }}"></script>
        <script src="{{ asset('assets/vendor/AdminLTE/plugins/timepicker/bootstrap-timepicker.min.js') }}"></script>
        <script src="{{ asset('assets/vendor/AdminLTE/plugins/datepicker/locales/bootstrap-datepicker.es.js') }}"></script>
        <script>
            $(function () {
                //Date picker
                $('.datepicker').datepicker({
                    autoclose: true,
                    format: 'dd/mm/yyyy',
                    language: 'es',
                    startDate: 'd',
                    startView: '0 days'
                });

                //Timepicker
                $(".timepicker").timepicker({
                    showInputs: false
                });
            });
        </script>
    {% endblock  %}