    {% extends 'admin_base.html.twig' %}

    {% set __title = 'Listado de Opciones de Tipo Tramite' %}

    {% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-success">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                                <th>Id</th>
                                <th>Descripcion</th>
                                <th>Activo</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for opcionesGenerale in opcionesGenerales %}
                        <tr>
                                    <td><a href="{{ path('opcionesgenerales_show', { 'id': opcionesGenerale.id }) }}">{{ opcionesGenerale.id }}</a></td>
                                    <td>{{ opcionesGenerale.descripcion }}</td>
                                    <td>{% if opcionesGenerale.activo %}<span class="label label-success">Si</span{% else %}<span class="label label-danger">No</span>{% endif %}</td>
                                    <td>
                                        <a title="Editar"   class="btn btn-default btn-sm" href="{{ path('opcionesgenerales_edit', { 'id': opcionesGenerale.id }) }}"><i class="glyphicon glyphicon-pencil"></i></a>
                                        <a title="Eliminar" class="btn btn-danger  btn-sm delete-obj" data-id="{{ opcionesGenerale.id }}" data-href="{{ path('opcionesgenerales_delete', { 'id': opcionesGenerale.id }) }}"> <i class="glyphicon glyphicon-remove-circle"></i></a>
                                    </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
            {{ knp_pagination_render(opcionesGenerales) }}

        </div>
    </div>

    <div class="delete-obj-form hidden">
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>

    <a class="btn btn-success" href="{{ path('opcionesgenerales_new') }}">Nuevo Opcion de Tipo Tramite</a>

    {% endblock %}

