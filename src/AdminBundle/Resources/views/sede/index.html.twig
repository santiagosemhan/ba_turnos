    {% extends 'admin_base.html.twig' %}

    {% set __title = 'Listado de Sedes' %}

    {% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-success">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                                <th>Id</th>
                                <th>Sede</th>
                                <th>Direcci√≥n</th>
                                <th>Letra</th>
                                <th>Ultimo Turno</th>
                                <th>Activo</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for sede in sedes %}
                        <tr>
                                    <td><a href="{{ path('sede_show', { 'id': sede.id }) }}">{{ sede.id }}</a></td>
                                    <td>{{ sede.sede }}</td>
                                    <td>{{ sede.direccion }}</td>
                                    <td>{{ sede.letra }}</td>
                                    <td>{{ sede.ultimoTurno }}</td>
                                    <td>{% if sede.activo %}<span class="label label-success">Si</span{% else %}<span class="label label-danger">No</span>{% endif %}</td>
                                    <td>
                                        <a title="Editar"   class="btn btn-default btn-sm" href="{{ path('sede_edit', { 'id': sede.id }) }}"><i class="glyphicon glyphicon-pencil"></i></a>
                                        <a title="Eliminar" class="btn btn-danger  btn-sm delete-obj" data-id="{{ sede.id }}" data-href="{{ path('sede_delete', { 'id': sede.id }) }}"> <i class="glyphicon glyphicon-remove-circle"></i></a>
                                    </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
            {{ knp_pagination_render(sedes) }}

        </div>
    </div>

    <div class="delete-obj-form hidden">
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>

    <a class="btn btn-success" href="{{ path('sede_new') }}">Nueva Sede</a>

    {% endblock %}

