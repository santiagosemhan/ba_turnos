    {% extends 'admin_base.html.twig' %}

    {% set __title = 'Opcion General' %}

    {% block content %}
    <div class="box box-success">
        <div class="box-body">
            <div class="row">
                <div class="col-md-9">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                    <td>{{ opcionGeneral.id }}</td>
                            </tr>
                            <tr>
                                <th>Descripcion</th>
                                    <td>{{ opcionGeneral.descripcion }}</td>
                            </tr>
                            <tr>
                                <th>Descripcionlarga</th>
                                    <td>{{ opcionGeneral.descripcionLarga }}</td>
                            </tr>
                            <tr>
                                <th>Activo</th>
                                    <td>{% if opcionGeneral.activo %}<span class="label label-success">Si</span{% else %}<span class="label label-danger">No</span>{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Fechacreacion</th>
                                    <td>{% if opcionGeneral.fechaCreacion %}{{ opcionGeneral.fechaCreacion|date('d-m-Y H:i:s') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Fechaactualizacion</th>
                                    <td>{% if opcionGeneral.fechaActualizacion %}{{ opcionGeneral.fechaActualizacion|date('d-m-Y H:i:s') }}{% endif %}</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="box-footer">
                        <a class="btn btn-success" href="{{ path('opciongeneral_edit', { 'id': opcionGeneral.id }) }}"> Editar</a>
                        <a class="btn btn-default" href="{{ path('opciongeneral_index') }}"> Volver al Listado</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

    {% endblock %}
