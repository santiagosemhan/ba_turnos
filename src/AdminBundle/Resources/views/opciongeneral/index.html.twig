    {% extends 'admin_base.html.twig' %}

    {% set __title = 'Listado de Opciones Generales' %}

    {% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-success">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                                <th>Id</th>
                                <th>Descripcion</th>
                                <th>Descripcionlarga</th>
                                <th>Activo</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for opcionGeneral in opcionGenerals %}
                        <tr>
                                    <td><a href="{{ path('opciongeneral_show', { 'id': opcionGeneral.id }) }}">{{ opcionGeneral.id }}</a></td>
                                    <td>{{ opcionGeneral.descripcion }}</td>
                                    <td>{{ opcionGeneral.descripcionLarga }}</td>
                                    <td>{% if opcionGeneral.activo %}<span class="label label-success">Si</span{% else %}<span class="label label-danger">No</span>{% endif %}</td>
                                    <td>
                                        <a title="Editar"   class="btn btn-default btn-sm" href="{{ path('opciongeneral_edit', { 'id': opcionGeneral.id }) }}"><i class="glyphicon glyphicon-pencil"></i></a>
                                        <a title="Eliminar" class="btn btn-danger  btn-sm delete-obj" data-id="{{ opcionGeneral.id }}" data-href="{{ path('opciongeneral_delete', { 'id': opcionGeneral.id }) }}"> <i class="glyphicon glyphicon-remove-circle"></i></a>
                                    </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
            {{ knp_pagination_render(opcionGenerals) }}

        </div>
    </div>

    <div class="delete-obj-form hidden">
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>

    <a class="btn btn-success" href="{{ path('opciongeneral_new') }}">Nuevo Opcion General</a>

    {% endblock %}

