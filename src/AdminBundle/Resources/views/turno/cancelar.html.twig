{% extends 'admin_base.html.twig' %}

    {% set __title = 'Cancelar Turno' %}

    {% block content %}
        <div class="box box-success">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-9">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Numero Turno</th>
                                <td>{{ turno.numero}}</td>
                            </tr>
                            <tr>
                                <th>Nombre Completo</th>
                                <td><b>{{ turno.nombreApellido }}</b></td>
                            </tr>
                            <tr>
                                <th>CUIT</th>
                                <td>{{ turno.cuit }}</td>
                            </tr>
                            <tr>
                                <th>Hora Turno</th>
                                <td>{{ turno.horaTurno|date('H:i') }}</td>
                            </tr>
                            <tr>
                                <th>Tramite</th>
                                <td>{{ turno.tipoTramite }}</td>
                            </tr>
                            {% if turno.fechaCancelado %}
                                <tr>
                                    <th>Fecha Cancelado</th>
                                    <td><span class="label label-danger">{{ turno.fechaCancelado|date('d-m-Y H:i:s')  }}</span></td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>

                        <div class="box-footer">
                            {% if turno.fechaCancelado %}
                            {% else %}<a class="btn btn-danger pull-left" href="{{ path('turno_procesa_cancelar', { 'id': turno.id }) }}"> Cancelar</a>
                            {% endif %}
                            <a class="btn btn-default" href="{{ path('turno_administrar') }}"> Volver al Listado</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    {% endblock %}
