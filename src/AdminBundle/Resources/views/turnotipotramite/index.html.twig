    {% extends 'admin_base.html.twig' %}

    {% set __title = 'Listado de Turno por Tramites por Sede' %}

    {% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-success">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                                <th>Id</th>
                                <th>Tipo Tramite</th>
                                <th>Agenda</th>
                                <th>Activo</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for turnoTramite in turnoTramites %}
                        <tr>
                                    <td><a href="{{ path('turnotipotramite_show', { 'id': turnoTramite.id }) }}">{{ turnoTramite.id }}</a></td>
                                    <td> {{ turnoTramite.tipoTramite }} </td>
                                    <td> {{ turnoTramite.turnoSede }}  </td>
                                    <td>{% if turnoTramite.activo %}<span class="label label-success">Si</span{% else %}<span class="label label-danger">No</span>{% endif %}</td>
                                    <td>
                                        <a title="Editar"   class="btn btn-default btn-sm" href="{{ path('turnotipotramite_edit', { 'id': turnoTramite.id }) }}"><i class="glyphicon glyphicon-pencil"></i></a>
                                        <a title="Eliminar" class="btn btn-danger  btn-sm delete-obj" data-id="{{ turnoTramite.id }}" data-href="{{ path('turnotipotramite_delete', { 'id': turnoTramite.id }) }}"> <i class="glyphicon glyphicon-remove-circle"></i></a>
                                    </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
            {{ knp_pagination_render(turnoTramites) }}

        </div>
    </div>

    <div class="delete-obj-form hidden">
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>

    <a class="btn btn-success" href="{{ path('turnotipotramite_new') }}">Nuevo Turno Tramite</a>

    {% endblock %}

