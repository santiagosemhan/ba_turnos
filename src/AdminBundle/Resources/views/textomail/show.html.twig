    {% extends 'admin_base.html.twig' %}

    {% set __title = 'Texto Mail' %}

    {% block content %}
    <div class="box box-success">
        <div class="box-body">
            <div class="row">
                <div class="col-md-9">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                    <td>{{ textoMail.id }}</td>
                            </tr>
                            <tr>
                                <th>Accion</th>
                                    <td>{{ textoMail.accion }}</td>
                            </tr>
                            <tr>
                                <th>Asunto</th>
                                    <td>{{ textoMail.asunto }}</td>
                            </tr>
                            <tr>
                                <th>Texto</th>
                                    <td>{{ textoMail.texto }}</td>
                            </tr>
                            <tr>
                                <th>Activo</th>
                                    <td>{% if textoMail.activo %}<span class="label label-success">Si</span{% else %}<span class="label label-danger">No</span>{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Fecha Creación</th>
                                    <td>{% if textoMail.fechaCreacion %}{{ textoMail.fechaCreacion|date('d-m-Y H:i:s') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Fecha Actualización</th>
                                    <td>{% if textoMail.fechaActualizacion %}{{ textoMail.fechaActualizacion|date('d-m-Y H:i:s') }}{% endif %}</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="box-footer">
                        <a class="btn btn-success" href="{{ path('texto_mail_edit', { 'id': textoMail.id }) }}"> Editar</a>
                        <a class="btn btn-default" href="{{ path('texto_mail_index') }}"> Volver al Listado</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

    {% endblock %}
